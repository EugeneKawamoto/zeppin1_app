<div class="col-sm-8 col-sm-offset-3 user-login">

  <h4><strong>新規会員登録</strong></h4>
  <div class="row">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :名前, class:"col-sm-3" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-sm-offset-1 col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class:"col-sm-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-sm-offset-1 col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード（6文字以上）, class:"col-sm-4" %>
        <%= f.password_field :password, autocomplete: "new-password", class:"col-sm-4" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード（確認用）, class:"col-sm-4" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-sm-4" %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit "新規会員として登録する", class:"btn btn-success col-sm-offset-2 col-sm-4" %>
      </div>
    <% end %>
  </div>
  <h4>登録済みユーザはこちら</h4>
  <%= link_to "ユーザとしてログインする", new_session_path(resource_name),class: "col-sm-offset-2 col-sm-4" %><br />

  <h4>簡単ログインはこちら</h4>
  <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "btn btn-info col-sm-offset-2 col-sm-4" %>

</div>

