<div class="col-sm-8 col-sm-offset-4 user-login">

  <h4>会員の方はこちらからログイン</h4>
<div class="row">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group">
      <%= f.label :メールアドレス, class:"col-sm-3" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード , class:"col-sm-3"%>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group">
        <%= f.check_box :remember_me, align:"right" %>
        <%= f.label :パスワードを保存する, class:"col-sm-offset-1 col-sm-3" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class:"btn btn-primary col-sm-offset-1 col-sm-3"%>
    </div>
  <% end %>
</div>
  <h4>登録がお済みでない方</h4>
  <%= link_to "こちら", new_registration_path(resource_name) %>から新規登録を行ってください。<br />
  <br/>
  <%= link_to "=>パスワードを忘れた方はこちら", new_password_path(resource_name) %><br />
</div>