  <h2>User info</h2>

    <%= form_for @user do |f| %>
      <div class="field">
        <label for="user_name">名前</label>
        <%= f.text_field :name, class:"form-control　form-inline" %>
      </div>
      <div class="field">
        <label for="user_image">画像</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <div class="field">
        <label for="user_introduction">好きな食べ物</label>
        <%= f.text_area :introduction, class:"form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "変更を保存する", class:"btn" %>
      </div>
    <% end %>
