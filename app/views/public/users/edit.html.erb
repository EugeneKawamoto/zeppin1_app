<div class="col-md-8 col-md-offset-4">

  <h3>ユーザ情報更新</h3>

    <%= form_for(@user, url:public_user_path) do |f| %>

      <div class="field">
        <%= f.label :画像 %><br />
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, class:"form-control　form-inline" %>
      </div>

      <div class="field">
        <%= f.label :自己紹介（任意）%><br />
        <%= f.text_field :introduction, class:"form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "変更を保存する", class:"btn btn-primary" %>
      </div>
    <% end %>

    <%= link_to "戻る", :back %>
</div>

