<div class="col-md-8 col-md-offset-2">

	<h3><%= @restaurant.name %>の情報</h3>
	<div class= row>
		<div class="col-md-8">
      <div id="map"></div>
		</div>
		<div class="col-md-4">
			<%= @restaurant.address %>
			<%= @restaurant.phone %>
		</div>
	</div>

	<h3> メニュー一覧 <small>(<%= @menus.count %>)</small></h3>

		<% @menus.each do |menu| %>
		<table>
			<li><%= link_to menu.name, public_menu_path(menu.id) %></li>
		</table>
		<% end %>

</div>

<script>
	var MyLatLng = new google.maps.LatLng(35.6655203, 139.6956679);
	var Options = {
		zoom     : 16,
		center   : MyLatLng,
		mapTypeId: 'roadmap'
	};
	var map = new google.maps.Map(document.getElementById('map'), Options);
</script>