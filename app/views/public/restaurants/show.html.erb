<div class="col-md-8 col-md-offset-2">

	<h3><i class="fas fa-store-alt" style="color: gray;"></i> <%= @restaurant.name %>の情報</h3>
	<div class="row restaurant-info">
		<div class="col-md-7">
      <div id="map"></div>
		</div>
		<div class="col-md-4">
			<div class="restaurant-address"><i class="fas fa-map-marked-alt" style="color: gray;"></i><%= @restaurant.address %></div><br/>
			<div class="restaurant-name"><i class="fas fa-phone-alt" style="color: gray;"></i><%= @restaurant.phone %></div>
		</div>
	</div>

	<%# todo:レビューランキング表示にする %>
	<h3><i class="fas fa-book-open" style="color: gray;"></i> メニュー一覧 <small>(<%= @menus.count %>)</small></h3>
		<% @menus.each do |menu| %>
		<table>
			<li><%= link_to menu.name, public_menu_path(menu.id) %></li>
		</table>
		<% end %>

</div>

