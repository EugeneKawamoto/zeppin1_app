<div class="col-md-8 col-md-offset-4">

	<h3>レストラン詳細ページ</h3>

	<%= @restaurant.name %>
	<%= @restaurant.address %>
	<%= @restaurant.phone %>

	<h3> メニュー一覧（<%= @menus.count %>） </h3>

		<% @menus.each do |menu| %>
		<table>
