<div class="col-md-8 col-md-offset-2">
	<div class="flash-message">
		<%= flash[:notice] %>
	</div>

	<div class="row">
		<% @reviews.each do |review| %>
			<div class="col-md-3">
				<%= link_to public_menu_path(review.menu.id) do %>
					<%= attachment_image_tag review.review_images.first, :image ,size:"165x165" %>
				<% end %>
				<%= attachment_image_tag review.user, :profile_image, :fill, 100, 100, fallback: "no_image1.jpg", class:"img-circle profile-thumb", size:"40x40" %>
				<%= review.user.name %>

        <div id="star-rate-<%= review.id %>"><%= review.rate %>点｜</div>

          <script>
          $('#star-rate-<%= review.id %>').raty({
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            starHalf  : '<%= asset_path('star-half.png') %>',
            half      : true,
						readOnly  : true,
            score     : <%= review.rate %>,
          });
          </script>

				<%= truncate review.comment %>
			</div>
		<% end %>
	</div>
</div>