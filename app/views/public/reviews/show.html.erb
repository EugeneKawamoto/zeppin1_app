    <div class="flash-message">
		<%= flash[:notice] %>
  </div>

<div class="col-md-8 col-md-offset-2 review-show-id">
  <div class="row">
    <div class="col-md-3">
      <%= attachment_image_tag @review.review_images.first, :image ,size:"145x145" %>
    </div>

    <div class="col-md-9">
      <%= attachment_image_tag @review.user, :profile_image, :fill, 100, 100, fallback: "no_image1.jpg", class:"img-circle profile-thumb", size:"50x50" %>
      <strong><%= @review.user.name %></strong> |

      <%# 個別星評価のためこの位置に記載 %>
      <span id="star-rate-<%= @review.id %>"><%= @review.rate %>点｜</span>
        <script>
        $('#star-rate-<%= @review.id %>').raty({
          starOff   : '<%= asset_path('star-off.png') %>',
          starOn    : '<%= asset_path('star-on.png') %>',
          starHalf  : '<%= asset_path('star-half.png') %>',
          half      : true,
          readOnly  : true,
          score     : <%= @review.rate %>,
        });
        </script>

      <div class="review-comment"><%= @review.comment %></div><br/>
    </div>
  </div>
    <div class="col-md-6 col-md-offset-4">
      <% if @review.user.id == current_user.id %>
        <%= link_to "レビューを編集する", edit_public_review_path(@review), class:"btn btn-success" %>
        <%= link_to "レビューを削除する", "#{@review.id}", method: :delete, "data-confirm" => "本当に消しますか?", class:"btn btn-danger pull-right" %></td>
      <% end %>
    </div>

</div>