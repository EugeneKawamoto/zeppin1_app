<div class="col-md-8 col-md-offset-2">
	<div class="flash-message">
		<%= flash[:notice] %>
	</div>

    <% if @review.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message +"error" %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <h3><%= @menu.name %>（<%= @restaurant.name %>）の評判</h3>

  <div class="row menu-show">
    <h4>メニュー情報</h4>
    <div class="col-md-4">
      <% if @reviews.present? %>
        <%= attachment_image_tag @reviews.last.review_images.first, :image, size:"200x200" %>
      <% else %>
        <%= image_tag 'no_image1.jpg',size:"145x145"%>
      <% end %>
    </div>

    <div class="col-md-6">
      <div id="star-rate-<%= @menu.id %>"><%= @menu.reviews.average(:rate).to_f.round(1) %>点｜</div><br/>
      <div class="menu-price">値段 <%= @menu.price %>円</div><br/>
      <div class="restaurant-name"><i class="fas fa-store-alt"></i><%= @menu.restaurant.name %></div><br/>

      <div class="bookmark">
        <% if @menu.bookmarked_by?(current_user) %>
          <%= link_to public_menu_bookmarks_path(@menu), method: :DELETE do %>
            <i class="fas fa-bookmark" aria-hidden="true" style="color: red;"></i>
            <%= @menu.bookmarks.count %>
          <% end %>
        <% else %>
          <%= link_to public_menu_bookmarks_path(@menu), method: :POST do %>
            <i class="far fa-bookmark" aria-hidden="true" style="color: gray;"></i>
            <%= @menu.bookmarks.count %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

    <br/>

    <div class="review-form">
      <%= render 'public/reviews/form', review: @review, menu: @menu %>
    </div>

    <br/>
  <h4>レビュー一覧<small>（<%= @reviews.count %>）</small></h4>


	<% @reviews.each do |review| %>
    <div class="row review-show">

      <div class="col-md-3">
        <%= link_to public_review_path(review.id) do %>
          <%= attachment_image_tag review.review_images.first, :image ,fallback: "no_image1.jpg", size:"145x145" %>
        <% end %>
      </div>

      <div class="col-md-8">
        <%= attachment_image_tag review.user, :profile_image, :fill, 100, 100, fallback: "no_image1.jpg", class:"img-circle profile-thumb", size:"50x50" %>
        <strong><%= review.user.name %></strong> |

        <%# 個別星評価のためこの位置に記載 %>
        <span id="star-rate-<%= review.id %>"><%= review.rate %>点｜</span>
          <script>
          $('#star-rate-<%= review.id %>').raty({
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            starHalf  : '<%= asset_path('star-half.png') %>',
            half      : true,
            readOnly  : true,
            score     : <%= review.rate %>,
          });
          </script>

        <div class="review-comment"><%= review.comment %></div>
      </div>
    </div><br/>
	<% end %>

</div>

<script>
$('#star-rate-<%= @menu.id %>').raty({
  starOff   : '<%= asset_path('star-off.png') %>',
  starOn    : '<%= asset_path('star-on.png') %>',
  starHalf  : '<%= asset_path('star-half.png') %>',
  half      : true,
  readOnly  : true,
  score     : <%= @menu.reviews.average(:rate).to_f.round(1) %>
});
</script>