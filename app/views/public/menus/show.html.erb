<div class="col-md-8 col-md-offset-2">
  <h3><%= @menu.name %>（<%= @restaurant.name %>）の評判</h3>

  <h4>メニュー情報</h4>
    <%= attachment_image_tag @reviews.first.review_images.first, :image ,size:"145x145" %>
    <%= @menu.name %>
    <%= @menu.price %>
    <%= @menu.restaurant.name %>
    <span id="star-rate-<%= @menu.id %>"><%= @menu.reviews.average(:rate).to_f.round(1) %>点｜</span>
　　<br/>

    <div class="review-form">
      <%= render 'public/reviews/form', review: @review, menu: @menu %>
    </div>

    <br/>
  <h4>レビュー一覧<small>（<%= @reviews.count %>）</small></h4>


	<% @reviews.each do |review| %>
    <div class="row">

      <div class="col-md-3">
        <%= attachment_image_tag review.review_images.first, :image ,size:"145x145" %>
      </div>

      <div class="col-md-8">
        <%= attachment_image_tag review.user, :profile_image, :fill, 100, 100, fallback: "no_image1.jpg", class:"img-circle profile-thumb", size:"50x50" %>
        <strong><%= review.user.name %></strong> |

        <%# 個別星評価のためこの位置に記載 %>
        <span id="star-rate-<%= review.id %>"><%= review.rate %>点｜</span>
          <script>
          $('#star-rate-<%= review.id %>').raty({
            starOff   : '<%= asset_path('star-off.png') %>',
            starOn    : '<%= asset_path('star-on.png') %>',
            starHalf  : '<%= asset_path('star-half.png') %>',
            half      : true,
            readOnly  : true,
            score     : <%= review.rate %>,
          });
          </script>

        <div class="review-comment"><%= review.comment %></div>
      </div>
    </div>
		<% end %>

    <%= paginate @reviews %>

</div>

<%# 平均評価 %>
<script>
$('#star-rate-<%= @menu.id %>').raty({
  starOff   : '<%= asset_path('star-off.png') %>',
  starOn    : '<%= asset_path('star-on.png') %>',
  starHalf  : '<%= asset_path('star-half.png') %>',
  half      : true,
  readOnly  : true,
  score     : <%= @menu.reviews.average(:rate).to_f.round(1) %>
});
</script>